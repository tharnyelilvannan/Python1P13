# Purpose: Simulates a bank.

import random

class Bank:

    def __init__(self, name, initialDeposit, password):
        self.name = name
        self.accountNumber = random.rantInt(1, (2**63 - 1))
        self.balance = initialDeposit
        self.password = password

    def getBalance(self):
        
        if (self.checkPassword):
            return self.balance
        else:
            return "Incorrect password."
        
    def getAccountNumber(self):

        if (self.checkPassword):
            return self.accountNumber
        else:
            return "Incorrect password."
        
    def withdraw(self):

        if (self.checkPassword):
            withdrawal = input("Enter the amount you would like to withdraw: ")

            self.balance = self.balance - withdrawal
            return self.balance
        else:
            return "Incorrect password."
        
    def deposit(self):

        if (self.checkPassword):
            depositAmount = input("Enter the amount you would like to deposit: ")

            self.balance = self.balance + depositAmount
            return self.balance
        else:
            return "Incorrect password."
            
    def checkPassword(self):
        password = input("Enter your password: ")

        if (password == self.password):
            return True
        else:
            return False